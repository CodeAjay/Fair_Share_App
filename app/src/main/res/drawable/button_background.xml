<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed_color" /> <!-- Set pressed color -->
            <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_default_color" /> <!-- Set default color -->
            <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>
</selector>
